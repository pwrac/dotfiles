set nocompatible
set showmatch
set hlsearch
set incsearch
set tabstop=4
set softtabstop=4
set expandtab
set shiftwidth=4
set autoindent
set number
set wildmode=longest,list
if has('filetype')
    filetype plugin indent on
endif
if has('syntax')
   syntax on
endif
set mouse=a
set clipboard=unnamedplus
set backupdir=~/.cache/vim
